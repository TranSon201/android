<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hinhnen1"
    tools:context=".Activity.PlayNhacActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarplaynhac"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>
    <android.support.v4.view.ViewPager
        android:layout_weight="8"
        android:id="@+id/viewpagerplaynhac"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_weight="2"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:weightSum="10"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#ffff"
                android:id="@+id/textviewtimesong"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="00:00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <SeekBar
                android:id="@+id/seekbarsong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8" />
            <TextView
                android:textColor="#ffff"
                android:id="@+id/textviewtotaltimesong"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="00:00"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginRight="20dp"
                android:id="@+id/imgbuttonsuffle"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconsuffle"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <ImageButton
                android:layout_marginRight="15dp"
                android:id="@+id/imgbuttonpre"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconpreview"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <ImageButton
                android:layout_marginRight="15dp"
                android:id="@+id/imgbuttonplay"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconplay"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <ImageButton
                android:layout_marginRight="15dp"
                android:id="@+id/imgbuttonnext"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconnext"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <ImageButton
                android:layout_marginRight="15dp"
                android:id="@+id/imgbuttonrepeat"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconrepeat"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>