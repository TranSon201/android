<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textviewdanhsachindex"
            android:text="1"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textviewtenbaihat"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/textviewdanhsachindex"
            android:textColor="#1B1A1A"
            android:text="Ten Ca khuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textviewcasi"
            android:layout_below="@+id/textviewtenbaihat"
            android:layout_toRightOf="@+id/textviewdanhsachindex"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#979797"
            android:textSize="15sp"
            android:text="Ca si"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageviewluotthichdanhsachbaihat"
            android:layout_marginRight="5dp"
            android:src="@drawable/iconlove"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/imageviewdownload"
            android:src="@drawable/icon_download_gray"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/imageviewluotthichdanhsachbaihat"
            android:layout_centerVertical="true"
            android:layout_width="30sp"
            android:layout_height="30dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>