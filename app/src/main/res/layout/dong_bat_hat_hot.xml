<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageviewbaihathot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textviewtenbathathot"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageviewbaihathot"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#363636"
        android:textSize="18sp"
        android:text="Ten Bai Hat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textviewcasibaihathot"
        android:layout_below="@+id/textviewtenbathathot"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/imageviewbaihathot"
        android:text="Ca Si"
        android:textSize="18sp"
        android:textColor="#8c8a8a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imageviewluotthich"
        android:src="@drawable/iconlove"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_width="30sp"
        android:layout_height="30dp"
        />
    <ImageView
        android:id="@+id/imageviewdownload"
        android:src="@drawable/icon_download_gray"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/imageviewluotthich"
        android:layout_centerVertical="true"
        android:layout_width="30sp"
        android:layout_height="30dp" />
</RelativeLayout>